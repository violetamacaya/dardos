{% extends '@DardosBundle/Resources/views/layout.html.twig' %}

{% block content %}
    <h1>Jugador</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ jugador.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ jugador.apellidos }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ jugador.dni }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ jugador.telefono }}</td>
            </tr>
            <tr>
                <th>Ppd</th>
                <td>{{ jugador.ppd }}</td>
            </tr>
            <tr>
                <th>Mpr</th>
                <td>{{ jugador.mpr }}</td>
            </tr>
            <tr>
                <th>Equipo</th>
                <td>{{ jugador.equipo }}</td>
            </tr>
        </tbody>
    </table>

            {{ form_start(delete_form) }}
    <a class="btn-primary btn" href="{{ path('prueba_jugador_index') }}">Volver al listado</a>
    <a class="btn-info btn" href="{{ path('prueba_jugador_edit', { 'id': jugador.id }) }}">Editar</a>
                <input class="btn-danger btn" type="submit" value="Borrar">
            {{ form_end(delete_form) }}

{% endblock %}
