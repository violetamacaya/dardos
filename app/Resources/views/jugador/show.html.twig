{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jugador</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jugador.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ jugador.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ jugador.apellidos }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ jugador.dni }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ jugador.telefono }}</td>
            </tr>
            <tr>
                <th>Ppd</th>
                <td>{{ jugador.ppd }}</td>
            </tr>
            <tr>
                <th>Mpr</th>
                <td>{{ jugador.mpr }}</td>
            </tr>
            <tr>
                <th>Equipo</th>
                <td>{{ jugador.equipo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prueba_jugador_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prueba_jugador_edit', { 'id': jugador.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
